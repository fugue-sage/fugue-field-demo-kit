# Common validators for the CloudFront service

export 
  validateTTL
  validatePort


import Fugue.AWS.Internal.Validation as V

fun validateTTL(ttl: Int , name: String) -> V.Validation:
  if ttl < 31536000 && ttl > negate(1) then
    V.Success
  else
    V.Fail(name ++ " must be > -1 and < 31,536,000")

fun validatePort(port: Int, name: String) -> V.Validation:
  if port < 65535 && port > negate(1) then 
    V.Success
  else
    V.Fail(name ++ " port must be > -1 and < 65,535")