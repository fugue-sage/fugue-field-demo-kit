@language("no-prelude")

type External:
    namespace: String
    value: String

# Creating external references
fun external(ext: External) -> resource:
    __Ludwig_External_external(ext)

# Deconstructing external references
fun unExternal(r: resource) -> Optional<External>:
    __Ludwig_External_unExternal(r)

# Checking if something is an external reference
fun isExternal(r: resource) -> Bool:
  case unExternal(r) of
    | None       -> False
    | Optional _ -> True
